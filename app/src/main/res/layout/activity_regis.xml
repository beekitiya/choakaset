<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.f55160175.choakaset.RegisActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignBottom="@+id/buttonCancel">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_marginTop="200dp">

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="ชื่อ"
                android:textColorHint="#BAE4E5"
                android:textSize="16sp"
                android:background="@drawable/group_top"
                android:id="@+id/fnameText" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPersonName"
                android:background="@drawable/group_row"
                android:ems="10"
                android:hint="นามสกุล"
                android:textSize="16sp"
                android:textColorHint="#BAE4E5"
                android:id="@+id/lnameText" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPersonName"
                android:hint="ชื่อผู้ใช้งาน"
                android:textSize="16sp"
                android:textColorHint="#BAE4E5"
                android:ems="10"
                android:background="@drawable/group_row"
                android:id="@+id/usernameRegis" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="อีเมล"
                android:textSize="16sp"
                android:textColorHint="#BAE4E5"
                android:id="@+id/emailRegis"
                android:background="@drawable/group_row" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPassword"
                android:textColorHint="#BAE4E5"
                android:ems="10"
                android:background="@drawable/group_row"
                android:hint="รหัสผ่าน"
                android:textSize="16sp"
                android:id="@+id/passwordRegis" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="32dp"
                android:inputType="textPassword"
                android:textColorHint="#BAE4E5"
                android:ems="10"
                android:id="@+id/confirmPass"
                android:hint="ยืนยันรหัสผ่าน"
                android:background="@drawable/group_bottom" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="ลงทะเบียน"
                android:textSize="16sp"
                android:id="@+id/buttonRegis"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/action_button"
                android:onClick="onRegis" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ยกเลิก"
                android:id="@+id/buttonCancel"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/frameLayout"
                android:layout_alignEnd="@+id/frameLayout"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-10dp" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileupload"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:src="@drawable/addpicture"
            app:border_color="#FF000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="25dp" />
    </FrameLayout>

</RelativeLayout>
